<%- include("partials/header") -%>
      </header>
      <main>
        <!-- Filter Menu  -->
        <div class="main-buttons">
            <button class="btn btn-primary me-3" id="add-project-btn">Add Project</button>

            <div class="dropdown">
                <a class="btn btn-primary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                Filter
                </a>
                <ul class="dropdown-menu pe-2" aria-labelledby="dropdownMenuLink">
                    <div class="filter-options">
                        <li><input class="form-check-input m-1 ms-3" type="checkbox" name="myProject">My Projects</li>
                        <li><input class="form-check-input m-1 ms-3" type="checkbox" name="activeProject">Active Projects</li>
                        <li><input class="form-check-input m-1 ms-3" type="checkbox" name="waitingProject">Waiting Projects</li>
                    </div>

                    <li><button class="btn btn-primary btn-sm mt-3" id="changePassword">Filter</button></li>
                </ul>
          </div>
        </div>

            <!-- Add Project popup  -->
        <div class="popupWindow hidePopupWindow" id="addProjectPopupWindow">
            <div class="popup-message">
                <img class="mb-2" src="images/add.png">
                <h3>Add new Project</h3>
            </div>    

            <div class="popup-content">
                <form action="my-projects/addProject" method="post" enctype="multipart/form-data">
                    <input type="text" class="form-control mt-3" name="title" placeholder="Project Title" required>
                    <textarea class="form-control mt-3" name="projectDescription" id="" cols="30" rows="5" placeholder="Project Description" required></textarea>             
                    <div class="form-group row  mt-3">
                        <label for="skills" class="col-sm-4 col-form-label">Skills Needed</label>
                        <div class="col-sm-8">
                          <input id="skills" type="text" class="form-control" name="skills" placeholder="Javascript, css, HTML" required>
                        </div>    
                    </div>    
                    <div class="form-group row mt-3">
                        <label for="chooseImg" class="col-sm-4 col-form-label">Add Images</label>
                        <div class="col-sm-8">
                            <input id="chooseImg" type="file" class="form-control" name='images' multiple accept="image/jpeg, image/png" required>
                        </div>       
                    </div>       
                    <div class="sure-buttsons-container mt-3">
                        <button class="btn btn-primary btn-lg mb-2" id="addProject">Add</button>
                    </div>
                    <a class="" id="cancelAddingProject">Cancel</a>
            </form>
            </div>
 

        </div>


        <div class="row">
            <% for( i in projects ) { %>
                <div class="btn card col col-2 m-3 mt-5 mb-1">
                    <a class="card-btn" href="project.html/<%= projects[i]._id.toString() %>">         
                        <div class="img-container">
                            <img src="../<%= projects[i].img.split(",")[0]%>" class="card-img-top" alt="...">
                        </div>        
                        <div class="card-body">
                            <h5 class="card-title mb-3">projects</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>

                        <div class="tags">
                            <a href=""><span class="tag tag-firestore tag-md me-3 mb-2">#JS</span></a>
                            <a href=""><span class="tag tag-firestore tag-md me-3 mb-2">#HTML</span></a>
                            <a href=""><span class="tag tag-firestore tag-md me-3 mb-2">#CSS</span></a>
                        </div>
                    </a>
                </div>
            <% } %>
            

